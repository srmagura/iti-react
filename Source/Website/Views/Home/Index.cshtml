@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Website
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title>React SPA template</title>
    <base href="~/" />

    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico" />
    <link type="text/css" rel="stylesheet" href="~/dist/app.css" asp-append-version="true" />
</head>
<body>
    <div id="react-app"></div>

    @if(Startup.IsDebug)
    {
        <script>isDebug = true</script>
    }

    <script src="~/dist/app.js" asp-append-version="true"></script>
    <noscript><h3>JavaScript is disabled. You must enable it to use this site.</h3></noscript>
</body>
</html>