{
  "private": true,
  "scripts": {
    "tsc-all": "yarn workspaces foreach run tsc",
    "test-all": "yarn workspaces foreach run test",
    "lint-all": "yarn workspaces foreach run lint \"**/*.ts?(x)\"",
    "prettier-all": "yarn workspaces foreach run prettier \"**/*.ts?(x)\" --write",
    "typedoc": "typedoc && pwsh -c '$null >> docs/.nojekyll'"
  },
  "workspaces": [
    "eslint-config",
    "iti-react-core",
    "iti-react",
    "permissions",
    "test-website",
    "check-for-js-bundle-update-saga",
    "prettier-config",
    "tsconfig"
  ],
  "-vs-binding": {
    "ProjectOpened": [
      "install"
    ]
  },
  "devDependencies": {
    "typedoc": "^0.21.9",
    "typedoc-plugin-param-names": "^3.0.1",
    "typescript": "^4.4.3"
  },
  "packageManager": "yarn@3.0.2"
}
